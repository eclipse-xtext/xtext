<?xml version="1.0" encoding="UTF-8"?>
<!-- ====================================================================== 
     Copies the contents of website to the website repository                                                                
     ====================================================================== -->
<project name="deploy" default="default">

	<target name="default" description="description">
		<copy todir="../../xtend-website">
			<fileset dir="website">
			</fileset>
		</copy>
	</target>

	<property name="xtend_xdoc_loc" location="${basedir}/../docs/org.eclipse.xtend.doc.xdoc/" />

	<target name="generateAll" description="Runs all the generation steps">
		<!--
		Latex For MacPorts:
		sudo port install texlive
		sudo port install texlive-latex-extra
		in /org.eclipse.xtend.doc.xdoc/src/workflow/GenerateDocs.mwe2 change pdfLatex path if not /opt/local/bin/pdflatex
		-->
		<java fork="true" clonevm="true" dir="${xtend_xdoc_loc}" classname="org.eclipse.emf.mwe2.launch.runtime.Mwe2Launcher">
			<arg line="file://${xtend_xdoc_loc}/src/workflow/GenerateDocs.mwe2" />
			<arg line="-p projectDir=/${xtend_xdoc_loc}/" />
		</java>
		<java fork="true" clonevm="true" dir="${xtend_xdoc_loc}" classname="org.eclipse.emf.mwe2.launch.runtime.Mwe2Launcher">
			<arg line="file://${xtend_xdoc_loc}/src/workflow/GenerateXtendEclipseHelp.mwe2" />
			<arg line="-p projectDir=/${xtend_xdoc_loc}/" />
		</java>
		<java classname="generator.xtend.XtendWebsiteGenerator" />
	</target>

</project>
